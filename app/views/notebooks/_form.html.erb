<% form_name ||= "Manage" %>
<h1 class="text-center">  <%= form_name %> Notebook </h1>
<h2> New Notebook </h2>


<%= form_for @notebook , method: (form_name.downcase == 'edit' ? 'put' : 'post') do |fc| %>
  <div class="form-group">
    <%= fc.label :name%>
    <%= fc.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= fc.label :user_id%>
    <%= fc.text_field :user_id, class: "form-control" %>
  </div>


  <%= fc.submit "#{form_name} notebook", class: "btn btn-primary" %>

<% end %>
