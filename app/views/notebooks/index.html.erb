<div class="container">
  <h1 class="text-center"> Notebook </h1>
  <% if current_user %>
    <section class="row text-center cities-controls" id="notebook-actions">
        <a href="<%= new_notebook_path %>" class="btn btn-default" data-remote="true"> New Notebook </a>
    </section>
  <% end %>
  <% @notebooks.each do |f| %>
    <article class="">
      <ul class="table-results">
        <div class="results-row">
          <li class="results-cell results-aling result-title"><%= f.name %></li>
        </div>

        <div class="result-row">
          <% f.tasknotebooks.each  do |t| %>
            <%if t.homework%>
            <div class="result-row">
              <li class="results-cell"> <%= t.homework.name %> </li>
            </div>
            <%end%>
          <% end if f.tasknotebooks.any? %>
        </div>

        <div class="result-row text-center">
          <% if current_user %>
            <li class="results-cell"><a href="<%= notebook_path(f.id) %>" data-method="delete" class="btn btn-danger"> Delete </a></li>
            <li class="results-cell"><a href="<%= edit_notebook_path(f.id) %>" class="btn btn-primary" data-remote="true"> Edit </a></li>
          <% end %>
            <li class="results-cell"><a href="<%= notebook_path(f.id) %>" class="btn btn-info" > Show </a></li>
        </div>

      </ul>
    </article>
  <% end if @notebooks.any? %>
</div>
